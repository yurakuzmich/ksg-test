{
    "compilerOptions": {
      /* Basic Options */
      "target": "es5",                       /* Target JavaScript version (e.g., es5, es6, es2020) */
      "module": "commonjs",                   /* Module system (e.g., commonjs, es6, amd) */
  
      /* Strictness Options */
      "strict": true,                         /* Enable all strict type-checking options */
      "noImplicitAny": true,                  /* Disallow implicit 'any' types */
      "strictNullChecks": true,               /* Enable strict null checks */
      "noImplicitThis": true,                 /* Disallow 'this' with implicit any type */
      "alwaysStrict": true,                   /* Parse in strict mode and emit "use strict" */
  
      /* Module Resolution Options */
      "moduleResolution": "node",            /* Module resolution strategy (e.g., node, classic) */
      "baseUrl": "./",                       /* Base directory to resolve non-absolute module names */
      "paths": {                             /* Specify paths for module names */
        "@utils/*": ["src/utils/*"]
      },
  
      /* Source Map Options */
      "sourceMap": true,                      /* Generate source maps for debugging */
  
      /* Experimental Options */
      "experimentalDecorators": true,         /* Enable experimental support for decorators */
      "emitDecoratorMetadata": true,          /* Emit design-type metadata for decorated declarations */
  
      /* Output Options */
      "outDir": "./dist",                     /* Redirect output structure to the directory */
      "rootDir": "./src",                    /* Specify the root directory of input files */
      "removeComments": true,                  /* Do not emit comments to output */
  
      /* Advanced Options */
      "esModuleInterop": true,                /* Enables emit interoperability between CommonJS and ES Modules */
      "forceConsistentCasingInFileNames": true /* Disallow inconsistently-cased references to the same file */
    },
    "include": ["src/**/*"],                  /* Include files from the src directory */
    "exclude": ["node_modules", "**/*.spec.ts"] /* Exclude node_modules and spec files */ 
  }